<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/match_operation"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:ellipsize="start"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="32sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#E62727"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="C"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/scobka1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#E62727"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="("
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/skobka2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#E62727"
            android:gravity="center"
            android:onClick="clickButton"
            android:text=")"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#FF8400"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="/"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#FF8400"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="*"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/decrement"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#FF8400"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/plus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#FF8400"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="2"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/btn_dot"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#4F4F4E"
            android:gravity="center"
            android:onClick="clickButton"
            android:text="."
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="0.5dp"
            android:layout_weight="1"
            android:background="#FF8400 "
            android:gravity="center"
            android:onClick="clickButton"
            android:text="="
            android:textColor="@color/white"
            android:textSize="30sp" />
    </LinearLayout>
</LinearLayout>